<!DOCTYPE html>
<html>
  <head>
    <title>TtsBlog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="header">  
    <div class="container">
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container-fluid">
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li><%= link_to 'Home', home_path, id: "home", class: "top" %></li>
            <li><%= link_to 'Write', "/posts/new", class: "top" %></li>
            <li><%= link_to 'Read', posts_path, class: "top" %></li>
          </ul>
          <div class="pull-right">
              <% if current_user %>
                <span style="font-weight: bold">Hi, <%= current_user.username %>! :)</span>
                <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-primary" %> 
                <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-default" %>
              <% end %>
          </div>
        </div>
      </div>
    </nav>
    </div>
    </div>

    <div class="main">
        <%= yield %>
    </div>

    <div class="footer">
      <div class="container">
        <div class="pull-right">
         <p>Designed by Ling Jin</p>
        </div>
      </div>
    </div>
  </body>
</html>
