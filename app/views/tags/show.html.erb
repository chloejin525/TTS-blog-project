<h1>All Posts tagged as <%= @tag.name %></h1>

<% @tag.posts.each do |post| %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="well">
        <h3><%= post.title %></h3>
        <p><em>posted on <%= post.created_at %></em></p>
        <p>
          <%= post.blog_entry.html_safe %>
        </p>
        <p>
          <%= link_to 'Show', post, class: "btn btn-info" %> 
        </p>
      </div>
    </div>
  </div>
<% end %>

