<div class="jumbotron">

<div class="row first-row">
  <div class="col-md-2">
    <p>Title</p>
  </div>
  <div class="col-md-2">
    <p>Author</p>
  </div>
  <div class="col-md-6">
    <p>Blog Entry</p>
  </div>
  <div class="col-md-2">
    <p>Action</p>
  </div>
</div>

<% @posts.each do |post| %>
  <div class="row table-content">
  <div class="col-md-2">
    <%= post.title %>
  </div>
  <div class="col-md-2">
    <%= post.author %>
  </div>
  <div class="col-md-6">
    <%= post.blog_entry %>
  </div>
  <div class="col-md-2">
    <%= link_to 'Show', post %>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>   
  </div> 
<% end %>
</div>
